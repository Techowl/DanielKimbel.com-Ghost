{{!< default}}

{{#post}}

<main class="content" role="main">
  <article class="{{post_class}} site-inner">

    <header class="post-header">
      <h1 class="post-title">{{title}}</h1>
      <time class="post-date mini-text" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
    </header>

    <section class="post-content">
      {{content}}
    </section>

    <footer class="post-footer">

      <section class="post-signature">
        <div class="author-link-holder">
          <span class="em-dash">&#8212;</span>
          <a href="{{@blog.url}}/about">{{author.name}}</a>
        </div>
        <div class="mini-text">{{author.location}}</div>
        <div class="mini-text">{{date format="DD MMMM YYYY"}}</div>
      </section>

      <section class="share flex-container">
        <a class="share-twitter share-btn" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
          onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
          Share on Twitter
        </a>
        <a class="share-facebook share-btn" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
          onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
          Share on Facebook
        </a>
        <a class="share-google-plus share-btn" href="https://plus.google.com/share?url={{url absolute="true"}}"
           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
           Share on Google+
        </a>
      </section>

    </footer>

  </article>
</main>

<aside class="read-next">
  {{#prev_post}}
  <a class="read-next-story prev {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
    Read Previous Post
  </a>
  {{/prev_post}}

  <a class="return-home" href="{{@blog.url}}">Home</a>

  {{#next_post}}
  <a class="read-next-story" href="{{url}}">
    Read Next Post
  </a>
  {{/next_post}}
</aside>

{{/post}}
